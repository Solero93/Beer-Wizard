                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:id="@+id/textView2Spell2"
                            android:text="@string/spell1"
                            android:layout_below="@+id/imageViewSpell2"
                            android:layout_centerHorizontal="true" />
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
