<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="pis2015.ub.com.beerwizard.MainMenuActivity"
    android:id="@+id/layout_main"
    android:orientation="horizontal"
    android:weightSum="1"
    android:gravity="center_vertical|center|center_horizontal"
    android:background="@color/background_main_menu"
    android:baselineAligned="false">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="213dp"
        android:id="@+id/layout_rooms"
        android:layout_gravity="center"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/lbl_available_rooms"
            android:id="@+id/txtvw_available_rooms"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/lbl_available_rooms" />

        <ListView
            android:layout_width="201dp"
            android:layout_height="match_parent"
            android:id="@+id/listvw_available_rooms"
            android:choiceMode="singleChoice" />

    </LinearLayout>

    <Space
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_weight="0.26" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="313dp"
        android:orientation="vertical"
        android:weightSum="1"
        android:id="@+id/layout_menu"
        android:layout_gravity="center">

        <ImageView
            android:layout_width="159dp"
            android:layout_height="107dp"
            android:id="@+id/imgvw_title"
            android:src="@drawable/img_title"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.17" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_new_game"
            android:id="@+id/btn_new_game"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.13" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_profile"
                android:id="@+id/btn_profile" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_tutorial"
                android:id="@+id/btn_tutorial" />

        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_about"
            android:id="@+id/btn_about"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.13" />

    </LinearLayout>

</LinearLayout>